!!!
/ START:head
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    / START_HIGHLIGHT
    %title Pragprog Books Online Store
    / END_HIGHLIGHT
    = stylesheet_link_tag    "application", media: "all"
    / <label id="code.slt"/>
    = javascript_include_tag "application"
    / <label id="code.jlt"/>
    = csrf_meta_tags
    / <label id="code.csrf"/>
  / END:head
  %body{:class => "#{controller.controller_name}"}
    / START_HIGHLIGHT
    #banner
      %a{:href => "/", :title => "На главную"}
        = image_tag("logo.png")
      = @page_title || "Pragmatic Bookshelf"
    #columns
      #side
        #cart
          - if @cart
            = hidden_div_if(@cart.line_items.empty?, id: 'cart') do
              = render @cart
        %ul
          %li
            = link_to 'Главная', '/'
          - if session[:user_id]
            %li= link_to 'Управление товарами', products_path
            %li= link_to  'Заказы', orders_path
            %li= link_to  'Пользователи', users_path

        %p.datetime_current
          = I18n.t 'app.now'
          = I18n.l Time.now
      #main
        / END_HIGHLIGHT
        = yield
        / <label id="code.depot.e.include"/>
        / START_HIGHLIGHT
    / END_HIGHLIGHT
